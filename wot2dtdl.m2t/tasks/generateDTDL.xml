<?xml version="1.0" encoding="UTF-8"?>
<project default="generateDTDL" name="wot2dtdl.m2t">
    <property name="ECLIPSE_HOME" value="../../../eclipse/modeling-2025-12/Eclipse.app/Contents/Eclipse"/>
    <property name="ECLIPSE_WORKSPACE" value="../.."/>

    <!-- The classpath with only the dependencies used by the project -->
    <path id="wot2dtdl.m2t.libraryclasspath">
        <pathelement location="${ECLIPSE_WORKSPACE}/wot2dtdl.m2t/bin"/>
    </path>

    <path id="wot2dtdl.m2t.classpath">
        <path refid="wot2dtdl.m2t.libraryclasspath"/>
    </path>

    <!-- The classpath with only the jars available in the plugin folder of Eclipse -->
    <path id="wot2dtdl.m2t.libraryclasspath.alljars">
        <pathelement location="../wot2dtdl.m2t/bin"/>
        <fileset dir="${ECLIPSE_HOME}/plugins/" includes="*.jar"/>
    </path>

    <path id="wot2dtdl.m2t.classpath.alljars">
        <path refid="wot2dtdl.m2t.libraryclasspath.alljars"/>
    </path>

    <!-- The default task with the jars used by this project -->
    <target name="generateDTDL">
        <java classname="generator.GenerateDTDL" classpathref="wot2dtdl.m2t.classpath">
            <arg value="${model}"/>
            <arg value="${target}"/>
        </java>
    </target>

    <!--
        In case of problem you can also try with all the jar available in your Eclipse
        Keep in mind that having two versions of the same jar can create problems
    -->
    <target name="generateDTDL.alljars">
        <java classname="generator.GenerateDTDL" classpathref="wot2dtdl.m2t.classpath">
            <arg value="${model}"/>
            <arg value="${target}"/>
        </java>
    </target>
</project>
